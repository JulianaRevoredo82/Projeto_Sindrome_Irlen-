                            <a href="https://www.facebook.com/portadorsindromedeirlen">Curta nossa página no Facebook</a>

                        </div>

                    </section>

                    <p>&copy; @DateTime.Now.Year - Desenvolvido por: Juliana A Revoredo </p>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
